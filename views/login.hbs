<div class="container body-container px-0 mb-5 pb-5">
  <div class="row mt-5">
    <div class="col-md-6 m-auto px-0">
      <div class="card card-body p-5">
        <h1 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i> Login</h1>

        {{> messages}}

        <form action="/users/login" method="POST">
          <div class="form-group">
            <label for="email">Email</label>
            <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email" />
          </div>
          <div class="form-group">
            <label for="password">Password</label>
            <input type="password" id="password" name="password" class="form-control" placeholder="Enter Password" />
          </div>
          <button type="submit" class="btn btn-secondary btn-block mt-4 py-2">Login</button>
        </form>
        <p class="mt-4">No Account? <a href="/users/register">Register</a>
        </p>
      </div>
    </div>
  </div>
</div>
