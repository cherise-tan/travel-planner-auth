          <input type="text" name="toCountry" placeholder="To Country" class="m-1">
          <input type="text" name="outboundTransport" placeholder="Mode of Transport" class="m-1">
          <h6 class="pt-3 pb-1">Departure</h6>
          <input type="date" name="outboundDepartureDate" placeholder="Date of Departure" class="m-1 grey">
