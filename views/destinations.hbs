{{#if destinations}} {{!-- Displayed when destination is being updated --}}

{{#destinations}}
<div class="container body-container container-fluid">
  <div class="light-background py-4 px-2">
    <form class="" action="/destinations/update/{{destinationId}}" method="post">
      <div class="row mx-auto pb-3">
        <div class="col py-2 add-trip-col">
          <h4 class="pt-3 pb-2">Destination</h4>
          <input type="text" name="city" value="{{city}}" class="m-1 wide-text-field" required>
          <input type="text" name="country" value="{{country}}" class="m-1 wide-text-field" required>
        </div>
        <div class="col py-2 add-trip-col ">
          <h4 class="pt-3 pb-2">Image</h4>
          <input type="url" pattern="https?://.+" name="imageUrl" value="{{imageUrl}}" class="m-1 wide-text-field"
            required>
        </div>
      </div>
      <div class="row mx-auto">
        <div class="col pb-2 add-trip-col m-2 silver">
          <h5 class="pt-3 pb-1">Inbound Trip</h5>
          <input type="text" name="fromCity" placeholder="From City" value="{{fromCity}}" class="m-1">
          <input type="text" name="fromCountry" placeholder="From Country" value="{{fromCountry}}" class="m-1">
          <input type="text" name="inboundTransport" placeholder="Mode of Transport" value="{{inboundTransport}}"
            class="m-1">
          <h6 class="pt-3 pb-1">Departure</h6>
          <input type="date" name="inboundDepartureDate" placeholder="Date of Departure"
            value="{{inboundDepartureDate}}" class="m-1 grey">
          <input type="time" name="inboundDepartureTime" placeholder="Time of Departure"
            value="{{inboundDepartureTime}}" class="m-1 grey">
          <h6 class="pt-3 pb-1">Arrival</h6>
          <input type="date" name="inboundArrivalDate" placeholder="Date of Arrival" value="{{inboundArrivalDate}}"
            class="m-1 grey">
          <input type="time" name="inboundArrivalTime" placeholder="Time of Arrival" value="{{inboundArrivalTime}}"
            class="m-1 grey">
        </div>
        <div class="col pb-2 add-trip-col m-2 silver">
          <h5 class="pt-3 pb-1">Outbound Trip</h5>
          <input type="text" name="toCity" placeholder="To City" value="{{toCity}}" class="m-1">
          <input type="text" name="toCountry" placeholder="To Country" value="{{toCountry}}" class="m-1">
          <input type="text" name="outboundTransport" placeholder="Mode of Transport" value="{{outboundTransport}}"
            class="m-1">
          <h6 class="pt-3 pb-1">Departure</h6>
          <input type="date" name="outboundDepartureDate" placeholder="Date of Departure"
            value="{{outboundDepartureDate}}" class="m-1 grey">
          <input type="time" name="outboundDepartureTime" placeholder="Time of Departure"
            value="{{outboundDepartureTime}}" class="m-1 grey">
          <h6 class="pt-3 pb-1">Arrival</h6>
          <input type="date" name="outboundArrivalDate" placeholder="Date of Arrival" value="{{outboundArrivalDate}}"
            class="m-1 grey">
          <input type="time" name="outboundArrivalTime" placeholder="Time of Arrival" value="{{outboundArrivalTime}}"
            class="m-1 grey">
        </div>
      </div>
      <div class="row">
        <button type="submit" value="submit" class=" btn btn-dark btn-lg mx-auto my-4">Update Trip</button>
      </div>
    </form>
  </div>
</div>
{{/destinations}}

{{else}} {{!-- Displayed when destination is being added --}}

