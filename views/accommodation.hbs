<div class="container body-container px-0 mb-0">
  <div class="m-5">

    {{#destinations}}
      <div class=" light-background py-3">
        <div class="row mx-auto p-4">
          <div class="col-md-8 my-auto">
            <h1 class="mx-auto add-trip-col">{{city}}, {{country}}</h1>
          </div>
          <div class="col-md-4 my-auto">
            <a class="mx-auto add-trip-col nav-link h5 mb-0" data-toggle="collapse" href="#collapseForm" role="button">Add Accommodation<i class=" fas fa-plus-circle"></i></a>
          </div>
        </div>
        <div class=" collapse silver py-3 m-4" id="collapseForm">
          <form class="pt-4" action="/accommodation/add/{{destinationId}}" method="post">
            <div class="row mx-auto px-4 py-2">
              <div class="col-md-4 add-trip-col my-auto">
                <h5>Name</h5>
              </div>
              <div class="col-md-8 my-auto add-trip-col p-0">
                <input type="text" name="name" placeholder="Name Of Accommodation" class="m-1 wide-text-field required" required>
              </div>
            </div>
            <div class="row mx-auto px-4 py-2">
              <div class="col-md-4 add-trip-col  my-auto">
                <h5>Address</h5>
              </div>
              <div class="col-md-8 my-auto add-trip-col p-0">
                <input type="text" name="address" placeholder="Address" class="m-1 wide-text-field">
              </div>
            </div>
            <div class="row mx-auto px-4 py-2">
              <div class="col-md-4 add-trip-col  my-auto">
                <h5>Website</h5>
              </div>
              <div class="col-md-8 my-auto add-trip-col p-0">
                <input type="url" pattern="https?://.+" name="website" placeholder="Website" class="m-1 wide-text-field">
              </div>
            </div>
            <div class="row mx-auto px-4 py-2">
              <div class="col-md-4 add-trip-col  my-auto">
                <h5>Notes</h5>
              </div>
              <div class="col-md-8 my-auto add-trip-col p-0">
                <textarea rows="3" name="notes" placeholder="Notes" class="m-1 wide-text-field"></textarea>
              </div>
            </div>
            <div class="row">
              <button type="submit" value="submit" class="btn btn-dark btn-lg mx-auto my-3">Add</button>
            </div>
          </form>
        </div>
      </div>
    {{/destinations}}

  </div>
</div>

<div class="container body-container px-0 mt-0">
  <div class="row">

    {{#each accommodations}}
      <div class="col-lg-4 col-md-6 px-0">
        <div class="card py-2 mb-5 mx-auto activity-card light-background">
          <div class="p-3 my-auto">
            <a class="text-dark h2" href="{{website}}" target="_blank">{{name}}</a>
          </div>
          <div class="card-body">
            <p class="card-text">{{address}}</p>
            <p class="card-text">{{notes}}</p>
          </div>
          <div class="px-3 pb-4">
            <div class="row mx-auto">
              <div class="col px-0">
                <button data-toggle="collapse" href="#collapseUpdateForm{{accommodationId}}" role="button" class="btn btn-link">Update Accommodation</button>
              </div>
              <div class="col px-0">
                <form action="/accommodation/delete/{{accommodationId}}" method="post">
                  <button type="submit" value="submit" class="btn btn-link ">Delete Accommodation</button>
                </form>
              </div>
            </div>
            <div class=" collapse silver p-1 m-1" id="collapseUpdateForm{{accommodationId}}">
              <form class="pt-4 px-2" action="/accommodation/update/{{accommodationId}}" method="post">
                <h5>Name</h5>
                <input type="text" name="name" placeholder="Name Of Attraction" value="{{name}}" class="mx-auto mb-3 wide-text-field" required>
                <h5>Address</h5>
                <input type="text" name="address" placeholder="Address" value="{{address}}" class="mx-auto mb-3 wide-text-field">
                <h5>Website</h5>
                <input type="url" pattern="https?://.+"  placeholder="Website" value="{{website}}" class="mx-auto mb-3 wide-text-field">
                <h5>Notes</h5>
                <textarea rows="3" name="notes" placeholder="Notes" class="mx-auto wide-text-field">{{notes}}</textarea>
                <div class="row">
                  <button type="submit" value="submit" class="btn btn-dark btn-medium mx-auto my-3">Update Activity</button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    {{/each}}

  </div>
</div>
